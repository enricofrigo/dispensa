<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Notifiche di Scadenza"
        app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="pref_expiry_days_before"
            app:title="Giorni di preavviso"
            app:summary="Numero di giorni prima della scadenza per ricevere la notifica."
            app:defaultValue="3"
            app:useSimpleSummaryProvider="true"
            android:inputType="number"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="pref_notification_time"
            app:title="Ora della notifica giornaliera"
            app:summary="Seleziona l'ora in cui ricevere la notifica di scadenza."
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
    <PreferenceCategory app:title="Locations"
        app:iconSpaceReserved="false">
        <Preference
            app:key="manage_locations"
            app:title="Gestione degli storage"
            app:summary="Aggiungi, modifica o riordina le tue location"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
    <PreferenceCategory app:title="Aspetto"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="theme_preference"
            app:title="Tema dell'app"
            app:summary="%s"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
</PreferenceScreen>
